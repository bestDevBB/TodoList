<!DOCTYPE html>
<html>
<head>
    <script src="/js/todo.js" defer></script>
    <link rel="stylesheet" type="text/css" href="/stylesheets/todo.css">
    <title>TODO</title>
</head>
<body>
    <!-- <div class="home">
        <button type="button" id="img" onclick="location.href='/todo'">
            <img src="/images/home.png" width="70">
        </button>
    </div> -->
    <h1 class="main-text">TODO LIST</h1>
    <hr><br>
    <form action="/todo/write" method="post" class="form-box">
        <input id="content" type="text" class="text-box" placeholder="Enter To Do" name="content" autocomplete="off">
        <button id="writeBtn" type="submit" class="btn">Write</button>
    </form>
    <br>
    <ul class="list-box">
        <% 
        let date = "";
        let next_date = "";
        todoTasks.forEach(tasks => { 
            date = (tasks.date).substring(0, 10);
            if(date != next_date){
                next_date = date;
                
        %>
            <li>
                <div class="date"><%= date %></div>
            </li>
            <% } %>
            <li class="todo-item">
                <div class="todo-item-content" id="content">&emsp;<%= tasks.content %> &emsp; </div>
                <div class="edit-btn">
                    <button type="button" id="img" onclick="location.href='/todo/edit/<%= tasks.id %>'"><img src="/images/edit.png" width="20px"></button>
                    <button type="button" id="img" onclick="location.href='/todo/remove/<%= tasks.id %>'"><img src="/images/remove.png" width="20px"></button>
                </div>
            </li>
        <% }); %>
    </ul>
</body>
</html>